<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.MatchRoomActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15dp"
            android:id="@+id/join"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="15dp"
            android:onClick="gir"
            android:id="@+id/edittext"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:paddingLeft="10dp"
        android:orientation="horizontal">

            <TextView
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:id="@+id/allpick"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="All Pick"
                android:textSize="20sp"
                android:layout_weight="1"
                android:textColor="#2F7FBF"
                >
            </TextView>
        <TextView
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:id="@+id/nickName2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_weight="1"
            android:textColor="#2F7FBF"
            >
        </TextView>
            <TextView
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:id="@+id/allrandom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="All Random"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_weight="1"
                android:textColor="#2F7FBF"
                >
            </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:gravity="center">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleroomlist"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_weight="1"
            android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:background="@drawable/back_24"
            >

        </View>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerandomroomlist"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>


</LinearLayout>