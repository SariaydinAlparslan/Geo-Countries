<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SelectCountryActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.github.chrisbanes.photoview.PhotoView
                android:id="@+id/country_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/list"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_country_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Value"
                    android:layout_marginRight="330dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/btn_select_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dp"
                    android:drawableRight="@drawable/send_24"
                    android:text="Select"
                    android:textColor="@color/black"
                    android:textSize="15sp" />


            </LinearLayout>

            <com.ramotion.fluidslider.FluidSlider
                android:id="@+id/fluid_slider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                app:bar_color="#3F57DA"
                app:duration="195"
                app:end_text="195"
                app:initial_position=".5"
                app:size="small"
                app:text_size="20sp"
                app:start_text="1" />

        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>