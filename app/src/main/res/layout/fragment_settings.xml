<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ui.SettingsFragment">

    <include
        layout="@layout/include_avatar_layout"
        android:id="@+id/includeavatar"
        android:visibility="gone"
        />


    <LinearLayout
        android:id="@+id/fragment_settings_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="start"
            android:gravity="start"
            android:orientation="vertical"
            android:id="@+id/change_avatar"
            >
            <TextView
                android:id="@+id/avatar_text"
                android:visibility="visible"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="40dp"
                android:text="Change Avatar" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/avatar_lootie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:lottie_autoPlay="true"
                app:lottie_loop="false"
                app:lottie_rawRes="@raw/avatar" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="start"
            android:gravity="start"
            android:orientation="vertical"
            android:id="@+id/share"
            >
            <TextView
                android:id="@+id/share_text"
                android:visibility="visible"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="40dp"
                android:text="Share" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/share_lootie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:lottie_autoPlay="true"
                app:lottie_loop="false"
                app:lottie_rawRes="@raw/share" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="start"
            android:gravity="start"
            android:orientation="vertical"
            android:id="@+id/rate"
            >
            <TextView
                android:id="@+id/Rate_text"
                android:visibility="visible"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="40dp"
                android:text="Rate Us" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/rate_lootie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:lottie_autoPlay="true"
                app:lottie_loop="false"
                app:lottie_rawRes="@raw/star" />


        </LinearLayout>

    </LinearLayout>




</FrameLayout>