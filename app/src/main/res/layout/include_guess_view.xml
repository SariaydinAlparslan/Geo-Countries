<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/guess_country_view"
    android:visibility="gone"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.github.chrisbanes.photoview.PhotoView
                android:id="@+id/country_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/list"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/result_guess"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Value"
                    android:layout_marginRight="330dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/btn_result_guess1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dp"
                    android:drawableRight="@drawable/think1"
                    android:onClick="list_guess"
                    android:text="Guess"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/btn_result_guess2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dp"
                    android:onClick="list_guess2"
                    android:visibility="gone"
                    android:drawableRight="@drawable/think1"
                    android:text="Guess"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>

            <com.ramotion.fluidslider.FluidSlider
                android:id="@+id/fluid_slider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                app:bar_color="#E91E63"
                app:duration="195"
                app:end_text="Max"
                app:initial_position=".5"
                app:size="small"
                app:text_size="20sp"
                app:start_text="0" />

        </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>