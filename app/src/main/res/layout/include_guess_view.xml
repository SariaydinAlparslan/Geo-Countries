<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/guess_country_view"
    android:visibility="gone"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.github.chrisbanes.photoview.PhotoView
                android:id="@+id/country_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/list"/>
            <com.ramotion.fluidslider.FluidSlider
                android:id="@+id/fluid_slider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                app:bar_color="#3F57DA"
                app:duration="195"
                app:end_text="195"
                app:initial_position=".5"
                app:size="small"
                app:text_size="20sp"
                app:start_text="1" />

        </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end">
        <TextView
            android:id="@+id/result_guess"
            android:layout_width="104dp"
            android:layout_height="75dp"
            android:text="Value"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="32sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/btn_result_guess1"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginTop="255dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/round_btn"
            android:drawableTop="@drawable/think1"
            android:gravity="center_horizontal"
            android:onClick="list_guess"
            android:text="Guess"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/btn_result_guess2"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:onClick="list_guess2"
            android:visibility="gone"
            android:drawableTop="@drawable/think1"
            android:text="Guess"
            android:textColor="@color/black"
            android:background="@drawable/round_btn"
            android:gravity="center_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="15sp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>