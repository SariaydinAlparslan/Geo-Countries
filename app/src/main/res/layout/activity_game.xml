<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.GameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visitor Country"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/visitornickname"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Map"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Host Country"
            android:paddingLeft="40dp"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/hostnametext"
            android:layout_weight="1"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/worldismy"
            android:layout_width="861dp"
            android:layout_height="474dp"
            android:src="@drawable/worldismy"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/button4"
            android:layout_width="89dp"
            android:layout_height="44dp"
            android:text="Button"
            android:onClick="clickfun"
            android:drawableTop="@drawable/high_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button3" />

        <Button
            android:id="@+id/button6"
            android:layout_width="89dp"
            android:layout_height="44dp"
            android:text="Button"
            android:onClick="clickfun"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button5"
            app:layout_constraintTop_toTopOf="@+id/button8"
            android:drawableTop="@drawable/high_24"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/button7"
            android:layout_width="89dp"
            android:layout_height="44dp"
            android:text="Button"
            android:onClick="clickfun"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button6"
            app:layout_constraintTop_toTopOf="@+id/button8"
            android:drawableTop="@drawable/high_24"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/button8"
            android:layout_width="89dp"
            android:layout_height="44dp"
            android:onClick="clickfun"
            android:drawableTop="@drawable/high_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button9"
            app:layout_constraintStart_toEndOf="@+id/button7"
            app:layout_constraintTop_toTopOf="@+id/button10"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/button9"
            android:layout_width="89dp"
            android:layout_height="44dp"
            android:drawableTop="@drawable/high_24"
            android:onClick="clickfun"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button7"/>

        <Button
            android:id="@+id/button"
            android:layout_width="89dp"
            android:layout_height="44dp"
            android:onClick="clickfun"
            android:drawableTop="@drawable/high_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/button3"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/button5"
            android:layout_width="89dp"
            android:layout_height="44dp"
            android:onClick="clickfun"
            app:layout_constraintBottom_toBottomOf="parent"
            android:drawableTop="@drawable/high_24"
            app:layout_constraintStart_toEndOf="@+id/button4"
            app:layout_constraintTop_toTopOf="@+id/button10" />

        <Button
            android:id="@+id/button3"
            android:layout_width="89dp"
            android:layout_height="44dp"
            android:onClick="clickfun"
            app:layout_constraintBottom_toBottomOf="parent"
            android:drawableTop="@drawable/high_24"
            app:layout_constraintStart_toEndOf="@+id/button2"
            app:layout_constraintTop_toTopOf="@+id/button4"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/button2"
            android:layout_width="89dp"
            android:layout_height="44dp"
            android:onClick="clickfun"
            app:layout_constraintBottom_toBottomOf="parent"
            android:drawableTop="@drawable/high_24"
            app:layout_constraintStart_toEndOf="@+id/button"
            app:layout_constraintTop_toTopOf="@+id/button3"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/button10"
            android:layout_width="89dp"
            android:layout_height="44dp"
            android:onClick="clickfun"
            app:layout_constraintBottom_toBottomOf="parent"
            android:drawableTop="@drawable/high_24"
            app:layout_constraintStart_toEndOf="@+id/button9"
            app:layout_constraintTop_toTopOf="@+id/button3"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/btnreset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</LinearLayout>