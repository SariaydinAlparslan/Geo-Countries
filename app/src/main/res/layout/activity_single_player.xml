<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.SinglePlayerActivity">

    <include
        layout="@layout/include_lose"
        android:id="@+id/lose_view"/>
    <include
        layout="@layout/include_win"
        android:id="@+id/win_view"/>
    <include
        layout="@layout/include_country_tips_single"
        android:id="@+id/country_tips_view"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/guess_country_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
            <com.github.chrisbanes.photoview.PhotoView
                android:id="@+id/country_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/list"/>

            <com.ramotion.fluidslider.FluidSlider
                android:id="@+id/fluid_slider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                app:bar_color="#3F57DA"
                app:duration="159"
                app:end_text="159"
                app:initial_position=".5"
                app:size="small"
                app:text_size="20sp"
                app:start_text="1" />

        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/result_guess"
                android:layout_width="104dp"
                android:layout_height="75dp"
                android:text="Value"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="32sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/btn_result_guess1"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginTop="255dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/round_btn"
                android:drawableTop="@drawable/think1"
                android:gravity="center_horizontal"
                android:onClick="list_guess"
                android:text="@string/guess"
                android:visibility="visible"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/btn_result_guess2"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="255dp"
                android:onClick="list_guess2"
                android:visibility="gone"
                android:text="@string/guess"
                android:textColor="@color/black"
                android:drawableTop="@drawable/think1"
                android:gravity="center_horizontal"
                android:background="@drawable/round_btn"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/worldismy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/worldismy"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.221"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/guess"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginTop="45dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/round_btn"
            android:drawableTop="@drawable/think1"
            android:gravity="center_horizontal"
            android:onClick="guess"
            android:text="@string/guess"
            app:layout_constraintEnd_toEndOf="@+id/worldismy"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/guess2"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginTop="45dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/round_btn"
            android:drawableTop="@drawable/think1"
            android:gravity="center_horizontal"
            android:onClick="guess2"
            android:text="@string/guess"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/worldismy"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/q5"
                android:onClick="clickfun"
                android:text="Button" />

            <Button
                android:id="@+id/button6"
                android:layout_width="89dp"
                android:layout_height="44dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/q5"
                android:onClick="clickfun"
                android:text="Button" />


            <Button
                android:id="@+id/button2"
                android:layout_width="89dp"
                android:layout_height="44dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/q5"
                android:onClick="clickfun" />

            <Button
                android:id="@+id/button"
                android:layout_width="89dp"
                android:layout_height="44dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/q5"
                android:onClick="clickfun" />

            <Button
                android:id="@+id/button5"
                android:layout_width="89dp"
                android:layout_height="44dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/q5"
                android:onClick="clickfun" />

            <Button
                android:id="@+id/button3"
                android:layout_width="89dp"
                android:layout_height="44dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/q5"
                android:onClick="clickfun" />
            <Button
                android:id="@+id/button7"
                android:layout_width="89dp"
                android:layout_height="44dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/q5"
                android:onClick="clickfun" />
            <Button
                android:id="@+id/button8"
                android:layout_width="89dp"
                android:layout_height="44dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/q5"
                android:onClick="clickfun" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/countrytips"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="60dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/tips2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="visible"
                    app:srcCompat="@drawable/eve" />
                <TextView
                    android:id="@+id/tips2_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:text="hellowolrd"
                    android:textColor="@color/black"
                    android:gravity="center">
                </TextView>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>